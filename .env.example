# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sherlock
RUN_DB_MIGRATIONS_ON_STARTUP=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
PUBLIC_API_URL=http://localhost:8000

# External APIs (Required for data ingestion)
ZENROWS_API_KEY=your_zenrows_api_key_here
ZENROWS_TIMEOUT_SECONDS=45

# Visual scoring (OpenAI Vision)
OPENAI_VISION_MODEL=gpt-4o-mini
OPENAI_VISION_MAX_OUTPUT_TOKENS=500
OPENAI_VISION_COST_PER_IMAGE_USD=

# Text intelligence (OpenAI)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_TEXT_MODEL=gpt-4o-mini
OPENAI_TEXT_MODEL_HARD=gpt-4.1-mini
OPENAI_TEXT_MAX_LISTINGS=5
OPENAI_TEXT_TIMEOUT_SECONDS=30
OPENAI_TEXT_COST_PER_1K_INPUT_USD=
OPENAI_TEXT_COST_PER_1K_OUTPUT_USD=

# Buyer criteria config
BUYER_CRITERIA_PATH=config/user_criteria.yaml

# Data Ingestion Configuration
# How often to run automated data ingestion (in hours)
INGESTION_INTERVAL_HOURS=6
# Whether to enable automatic scheduled ingestion
ENABLE_AUTO_INGESTION=true
# Comma-separated list of providers (default: zillow)
INGESTION_SOURCES=zillow

# Data Ingestion Limits
# Maximum number of search result pages to fetch per ingestion run
# Each page contains ~40 listings. Recommended: 25 for comprehensive coverage (~1000 listings)
MAX_PAGES=25
# Maximum number of property detail API calls per ingestion run
# Detail calls enrich listings with full descriptions, photos, etc.
# Recommended: 200 for good coverage (or match MAX_PAGES * 40 for all listings)
MAX_DETAIL_CALLS=200

# Search Filter Configuration
# Minimum property price in dollars (default: $1M for luxury market)
SEARCH_PRICE_MIN=1000000
# Maximum property price in dollars (leave empty for no upper limit)
SEARCH_PRICE_MAX=
# Minimum number of bedrooms
SEARCH_BEDS_MIN=3
# Minimum number of bathrooms (decimal allowed, e.g., 2.5)
SEARCH_BATHS_MIN=2.0
# Minimum square footage
SEARCH_SQFT_MIN=1200

# Source-specific search URLs (optional overrides)
TRULIA_SEARCH_URL=https://www.trulia.com/for_sale/San_Francisco,CA/
REALTOR_SEARCH_URL=https://www.realtor.com/realestateandhomes-search/San-Francisco_CA
CRAIGSLIST_SEARCH_URL=https://sfbay.craigslist.org/search/rea
REDFIN_SEARCH_URL=https://www.redfin.com/city/17151/CA/San-Francisco
CURATED_SOURCES_PATH=config/curated_sources.yaml

# Feature Flags
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_LOGGING=true

# Alerting (email / iMessage / SMS)
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_USE_TLS=true
ALERT_EMAIL_FROM=
ALERT_EMAIL_TO=
IMESSAGE_ENABLED=false
IMESSAGE_TARGET=
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=
TWILIO_TO_NUMBER=

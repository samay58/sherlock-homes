# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/sherlock
RUN_DB_MIGRATIONS_ON_STARTUP=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
FRONTEND_URL=http://localhost:5173
PUBLIC_API_URL=http://localhost:8000

# External APIs (Required for data ingestion)
ZENROWS_API_KEY=your_zenrows_api_key_here

# Claude Vision API (for visual property scoring)
# Get your API key from https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Data Ingestion Configuration
# How often to run automated data ingestion (in hours)
INGESTION_INTERVAL_HOURS=6
# Whether to enable automatic scheduled ingestion
ENABLE_AUTO_INGESTION=true

# Data Ingestion Limits
# Maximum number of search result pages to fetch per ingestion run
# Each page contains ~40 listings. Recommended: 25 for comprehensive coverage (~1000 listings)
MAX_PAGES=25
# Maximum number of property detail API calls per ingestion run
# Detail calls enrich listings with full descriptions, photos, etc.
# Recommended: 200 for good coverage (or match MAX_PAGES * 40 for all listings)
MAX_DETAIL_CALLS=200

# Search Filter Configuration
# Minimum property price in dollars (default: $1M for luxury market)
SEARCH_PRICE_MIN=1000000
# Maximum property price in dollars (leave empty for no upper limit)
SEARCH_PRICE_MAX=
# Minimum number of bedrooms
SEARCH_BEDS_MIN=3
# Minimum number of bathrooms (decimal allowed, e.g., 2.5)
SEARCH_BATHS_MIN=2.0
# Minimum square footage
SEARCH_SQFT_MIN=1200

# Feature Flags
ENABLE_MOCK_DATA=false
ENABLE_DEBUG_LOGGING=true